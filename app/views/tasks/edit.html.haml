.container
  %p.header_text
  .border_line
  %h2 New Card
  = form_with(model: @task, url: task_path(@task), method: 'put', local: true) do |f|
    %div
      = f.label :eyecatch, 'アイキャッチ'
    %div
      = f.file_field :eyecatch
    %div
      = f.label :title, 'タイトル'
    %div
      = f.text_field :title, class: 'text'
    %div
      = f.label :content, '内容'
    %div
      = f.text_area :content, class: 'board-text'
    = f.submit '保存' ,class: 'btn-primary'