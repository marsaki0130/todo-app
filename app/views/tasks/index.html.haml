.container
  %h2 Brackets
  - @tasks.each do|task|
    = link_to task_path(task) do
      .content
        - if task.eyecatch.attached?
          = image_tag task.eyecatch, class: 'eyecatch'
        .content-box
          %p.content-left 
            = task.title
        %p.content-writing
          = task.content
  .card_add
    = link_to '+ Add new card ', new_task_path 
      