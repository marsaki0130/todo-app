.container
  %p.header_text
  .border_line
  %h2 New Card
  = form_with(model: @task,url: board_task_path(@board),local: true) do |f| 
    %div
      = f.label :name, 'Name'
    %div
      = f.text_field :name, class: 'text'
    %div
      = f.label :description, 'Description'
    %div
      = f.text_area :description, class: 'board-text'
    = f.submit 'Submit' ,class: 'btn-primary'