.container
  %h2 All Boards
  - @boards.each do|board|
    = link_to board_path(board) do
      .card
        .card_name
          = board.name
          .dropdown
            = image_tag 'actions.svg', class: 'dropbtn'
            .dropdown-content
              = link_to '編集する',edit_board_path(board)
              = link_to '削除する',board_path(board), data: { method: 'delete', confirm: '本当に削除してもよろしいですか?' }
        .card_description
          = board.description
  .card_add
    = link_to '+ Add new board ', new_board_path 